<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.view.AddressActivity">

  <com.google.android.material.appbar.MaterialToolbar
      android:id="@+id/app_bar_layout"
      android:layout_width="match_parent"
      android:layout_height="?actionBarSize"
      android:elevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp">

      <ImageView
          android:id="@+id/back_btn_login"
          android:layout_width="24dp"
          android:layout_height="match_parent"
          android:src="@drawable/ios_arrow_left_svgrepo_com" />

      <TextView
          android:id="@+id/titleLead"
          android:gravity="center"
          android:textColor="@color/txt_black"
          android:textSize="22sp"
          android:fontFamily="@font/roboto_medium"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginHorizontal="10dp"
          android:layout_marginVertical="10dp"
          android:layout_centerInParent="true"
          android:text="@string/choose_delivery_address" />
      <ImageView
          android:id="@+id/btnAdd"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@drawable/add_svgrepo_com"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:layout_marginEnd="15dp" />
    </RelativeLayout>

  </com.google.android.material.appbar.MaterialToolbar>

  <RelativeLayout
      android:layout_marginTop="25dp"
      android:layout_marginHorizontal="15dp"
      android:layout_above="@+id/btn_layout"
      android:layout_below="@+id/app_bar_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/address_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

  </RelativeLayout>



  <LinearLayout
      android:id="@+id/btn_layout"
      android:paddingHorizontal="15dp"
      android:paddingVertical="25dp"
      android:layout_alignParentBottom="true"
      android:background="@color/white"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/confirmOrderBtn"
        android:background="@drawable/btn_round_v2"
        android:backgroundTint="@color/primary"
        android:elevation="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="@string/ok"
        android:textSize="16sp"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white_80"
        android:layout_width="0dp"
        android:layout_height="60dp"/>
  </LinearLayout>
  </RelativeLayout>