<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="10dp"
    android:elevation="0dp"
    android:background="@color/white"
    app:cardElevation="0dp"
    app:cardCornerRadius="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="15dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/addressName"
                android:textSize="20sp"
                android:textColor="@color/txt_black"
                android:fontFamily="@font/roboto_medium"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="15dp"
            android:background="@color/gray_divide"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/recipient_name"
                android:textSize="18sp"
                android:textColor="@color/txt_black"
                android:fontFamily="@font/roboto_medium"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/recipient_phone"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:textColor="@color/txt_black"
                android:fontFamily="@font/roboto_regular"
                android:text="(009 834 908 059)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/address_line"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/txt_black"
            android:fontFamily="@font/roboto_regular"
            android:text="st28 kos pic "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/location_pin_alt_1_svgrepo_com"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/txt_gray" />
            <TextView
                android:id="@+id/point"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:textColor="@color/txt_gray"
                android:fontFamily="@font/roboto_regular"
                android:text="Phnom Penh"
                android:layout_gravity=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/addToCart_btn"
            android:background="@drawable/btn_round_small_green"
            android:elevation="0dp"
            android:gravity="center"
            android:text="@string/change_address"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>