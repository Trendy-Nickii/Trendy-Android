<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_bg"
    tools:context=".Ui.fragment.HomeFragment">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp">
<!--            <ImageButton-->
<!--                android:id="@+id/btnBack"-->
<!--                style="@style/btnBackAppbarStyle"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/ic_baseline_arrow_back_ios_24" />-->

            <TextView
                android:id="@+id/titleLead"
                android:gravity="center"
                android:textColor="@color/txt_black"
                android:textStyle="bold"
                android:textSize="45sp"
                android:fontFamily="@font/italianno_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_centerInParent="true"
                android:text="@string/app_name" />
            <ImageView
                android:background="@drawable/notification_bg_round"
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:src="@drawable/notification_13_svgrepo_com"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp" />
        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>
    <RelativeLayout
        android:background="@color/main_bg"
        android:layout_below="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:fillViewport="true"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/main_bg"
                android:layout_width="match_parent"
                android:paddingBottom="30dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txt_search"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingHorizontal="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"
                    android:drawablePadding="10dp"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:background="@drawable/search_edt_bg_round"
                    android:hint="@string/search_hint"
                    android:textColor="@color/grey_font"
                    android:drawableStart="@drawable/ic_searc"/>
               <androidx.cardview.widget.CardView
                   android:id="@+id/card_banner"
                   android:layout_below="@+id/txt_search"
                   android:layout_marginTop="15dp"
                   app:cardElevation="1dp"
                   android:elevation="1dp"
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   app:cardCornerRadius="10dp">
                   <com.denzcoskun.imageslider.ImageSlider
                       app:iss_selected_dot="@drawable/default_selected_dot"
                       app:iss_unselected_dot="@drawable/default_unselected_dot"
                       android:id="@+id/image_slider"
                       app:iss_period="1000"
                       app:iss_auto_cycle="true"
                       app:iss_title_background="@color/tran"
                       app:iss_delay="5000"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>
               </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:layout_below="@+id/card_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/loading"
                        android:visibility="gone"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/skeleto_animation"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="600dp"/>
                    <RelativeLayout
                        android:id="@+id/new_arrival_section"
                        android:gravity="center_vertical"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/title_new_arrival"
                            android:layout_marginVertical="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_new_arrival"
                                android:textSize="20sp"
                                android:textColor="@color/txt_black"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/new_arrival"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="0dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:textColor="@color/primary"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/view_all"/>
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/arrow_narrow_right_svgrepo_com"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:tint="@color/primary" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_marginTop="15dp"
                            android:id="@+id/new_arrival_rec_layout"
                            android:layout_below="@+id/title_new_arrival"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rec_new_arrival"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/hot_deal_section"
                        android:gravity="center_vertical"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/new_arrival_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/title_hot_deal"
                            android:layout_marginVertical="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_hot_deal"
                                android:textSize="20sp"
                                android:textColor="@color/txt_black"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/hot_deals_this_week"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="0dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:textColor="@color/primary"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/view_all"/>
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/arrow_narrow_right_svgrepo_com"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:tint="@color/primary" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_marginTop="15dp"
                            android:id="@+id/hot_deal_rec_layout"
                            android:layout_below="@+id/title_hot_deal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rec_hot_deal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_banner_2"
                        android:layout_below="@+id/hot_deal_section"
                        android:layout_marginTop="20dp"
                        app:cardElevation="1dp"
                        android:elevation="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:cardCornerRadius="10dp">
                        <com.denzcoskun.imageslider.ImageSlider
                            app:iss_selected_dot="@drawable/default_selected_dot"
                            app:iss_unselected_dot="@drawable/default_unselected_dot"
                            android:id="@+id/image_slider_2"
                            app:iss_period="1000"
                            app:iss_auto_cycle="true"
                            app:iss_title_background="@color/tran"
                            app:iss_delay="5000"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <RelativeLayout
                        android:id="@+id/skincare_section"
                        android:gravity="center_vertical"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/card_banner_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/title_skincare"
                            android:layout_marginVertical="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_skincare"
                                android:textSize="20sp"
                                android:textColor="@color/txt_black"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Care your skin by"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="0dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:textColor="@color/primary"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/view_all"/>
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/arrow_narrow_right_svgrepo_com"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:tint="@color/primary" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_marginTop="15dp"
                            android:id="@+id/skincare_rec_layout"
                            android:layout_below="@+id/title_skincare"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/skincare_rec"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/skincare_summer_section"
                        android:gravity="center_vertical"
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/skincare_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/title_skincare_summer"
                            android:layout_marginVertical="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_skincare_summer"
                                android:textSize="20sp"
                                android:textColor="@color/txt_black"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Best For this season"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="0dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:textColor="@color/primary"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/view_all"/>
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/arrow_narrow_right_svgrepo_com"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:tint="@color/primary" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_marginTop="15dp"
                            android:id="@+id/skincare_summer_rec_layout"
                            android:layout_below="@+id/title_skincare_summer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/skincare_summer_rec"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/footer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:background="@color/main_bg"
                        android:layout_below="@+id/skincare_summer_section"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginBottom="5dp"
                        android:paddingBottom="15dp"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:id="@+id/git_hub"
                            android:src="@drawable/ic_github"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/copyright" />

                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

</RelativeLayout>