<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.fragment.ProfileFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp">
            <!--            <ImageButton-->
            <!--                android:id="@+id/btnBack"-->
            <!--                style="@style/btnBackAppbarStyle"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:src="@drawable/ic_baseline_arrow_back_ios_24" />-->

            <TextView
                android:id="@+id/titleLead"
                android:gravity="center"
                android:textColor="@color/txt_black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_centerInParent="true"
                android:text="@string/account" />
            <ImageView
                android:background="@drawable/notification_bg_round"
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:src="@drawable/notification_13_svgrepo_com"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp" />
        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>
    <RelativeLayout
        android:background="@color/main_bg"
        android:layout_below="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:fillViewport="true"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/main_bg"
                android:layout_width="match_parent"
                android:paddingBottom="30dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/userProfile_card"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp"
                    android:elevation="0.5dp"
                    app:cardElevation="0.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="15dp"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_photo"
                            android:src="@drawable/lisa"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/username"
                                android:text="@string/username"
                                android:textSize="20sp"
                                android:textColor="@color/txt_black"
                                android:fontFamily="@font/roboto_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/user_phone"
                                android:text="@string/phone_number"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="14sp"
                                android:gravity="bottom"
                                android:textColor="@color/txt_gray"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="0dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/qr_scanner"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_qr_scan"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/method_card"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/userProfile_card"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp"
                    android:elevation="0.5dp"
                    app:cardElevation="0.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/white"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:paddingVertical="10dp"
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                app:tint="@color/txt_black"
                                android:src="@drawable/location_pin_alt_1_svgrepo_com"
                                android:layout_width="26dp"
                                android:layout_height="26dp"/>
                            <TextView
                                android:textColor="@color/txt_black"
                                android:text="@string/manage_address"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="15dp"
                                android:textSize="18sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@drawable/ios_arrow_left_svgrepo_com"
                                android:rotation="180"
                                android:layout_gravity="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:paddingVertical="10dp"
                            android:id="@+id/payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                app:tint="@color/txt_black"
                                android:src="@drawable/payment_card_svgrepo_com"
                                android:layout_width="26dp"
                                android:layout_height="26dp"/>
                            <TextView
                                android:textColor="@color/txt_black"
                                android:text="@string/payment_method"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="15dp"
                                android:textSize="18sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@drawable/ios_arrow_left_svgrepo_com"
                                android:rotation="180"
                                android:layout_gravity="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:paddingVertical="10dp"
                            android:id="@+id/setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                app:tint="@color/txt_black"
                                android:src="@drawable/setting_1_svgrepo_com"
                                android:layout_width="26dp"
                                android:layout_height="26dp"/>
                            <TextView
                                android:text="@string/setting"
                                android:textColor="@color/txt_black"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="15dp"
                                android:textSize="18sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@drawable/ios_arrow_left_svgrepo_com"
                                android:rotation="180"
                                android:layout_gravity="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_card"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/method_card"
                    android:background="@color/white"
                    app:cardCornerRadius="10dp"
                    android:elevation="0.5dp"
                    app:cardElevation="0.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/white"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:paddingVertical="10dp"
                            android:id="@+id/profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                app:tint="@color/txt_black"
                                android:src="@drawable/ic_user"
                                android:layout_width="26dp"
                                android:layout_height="26dp"/>
                            <TextView
                                android:text="@string/profile"
                                android:layout_gravity="center"
                                android:textColor="@color/txt_black"
                                android:layout_marginHorizontal="15dp"
                                android:textSize="18sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@drawable/ios_arrow_left_svgrepo_com"
                                android:rotation="180"
                                android:layout_gravity="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:paddingVertical="10dp"
                            android:id="@+id/notification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                app:tint="@color/txt_black"
                                android:src="@drawable/notification_13_svgrepo_com"
                                android:layout_width="26dp"
                                android:layout_height="26dp"/>
                            <TextView
                                android:text="@string/notification"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="15dp"
                                android:textSize="18sp"
                                android:textColor="@color/txt_black"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@drawable/ios_arrow_left_svgrepo_com"
                                android:rotation="180"
                                android:layout_gravity="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:paddingVertical="10dp"
                            android:id="@+id/app_appearance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                app:tint="@color/txt_black"
                                android:src="@drawable/ic_eye_alt_svgrepo_com"
                                android:layout_width="26dp"
                                android:layout_height="26dp"/>
                            <TextView
                                android:text="@string/app_appearance"
                                android:layout_gravity="center"
                                android:textColor="@color/txt_black"
                                android:layout_marginHorizontal="15dp"
                                android:textSize="18sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@drawable/ios_arrow_left_svgrepo_com"
                                android:rotation="180"
                                android:layout_gravity="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:paddingVertical="10dp"
                            android:id="@+id/dataAnalytics"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:src="@drawable/ic_analysis"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                app:tint="@color/txt_black" />
                            <TextView
                                android:text="@string/data_analytics"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="15dp"
                                android:textSize="18sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="0dp"
                                android:textColor="@color/txt_black"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@drawable/ios_arrow_left_svgrepo_com"
                                android:rotation="180"
                                android:layout_gravity="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:paddingVertical="10dp"
                            android:id="@+id/helpSupport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                app:tint="@color/txt_black"
                                android:src="@drawable/ic_file"
                                android:layout_width="26dp"
                                android:layout_height="26dp"/>
                            <TextView
                                android:text="@string/help_support"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="15dp"
                                android:textSize="18sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textColor="@color/txt_black"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@drawable/ios_arrow_left_svgrepo_com"
                                android:rotation="180"
                                android:layout_gravity="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:paddingVertical="10dp"
                            android:id="@+id/logout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:src="@drawable/ic_logout"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                app:tint="@color/red" />
                            <TextView
                                android:text="@string/logout"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="15dp"
                                android:textSize="18sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textColor="@color/red"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@drawable/ios_arrow_left_svgrepo_com"
                                android:rotation="180"
                                android:layout_gravity="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                        </LinearLayout>

                    </LinearLayout>





                </androidx.cardview.widget.CardView>


            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/skeleto_animation"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</RelativeLayout>