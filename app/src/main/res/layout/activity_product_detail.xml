<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.view.ProductDetailActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/back_btn_login"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@drawable/ios_arrow_left_svgrepo_com" />

            <TextView
                android:id="@+id/titleLead"
                android:gravity="center"
                android:textColor="@color/txt_black"
                android:textSize="22sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_centerInParent="true"
                android:text="@string/product" />
            <ImageView
                android:background="@drawable/notification_bg_round"
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:src="@drawable/notification_13_svgrepo_com"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp" />
        </RelativeLayout>

    </com.google.android.material.appbar.MaterialToolbar>
    <RelativeLayout
        android:background="@color/white"
        android:layout_below="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:fillViewport="true"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="25dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:paddingBottom="30dp"
                android:layout_height="wrap_content">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/loading"
                    android:visibility="gone"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/skeleto_animation"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="900dp"/>
                <RelativeLayout
                    android:id="@+id/content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.denzcoskun.imageslider.ImageSlider
                        app:iss_selected_dot="@drawable/default_selected_dot"
                        app:iss_unselected_dot="@drawable/default_unselected_dot"
                        android:id="@+id/productImage"
                        app:iss_period="1000"
                        app:iss_auto_cycle="true"
                        app:iss_no_dots="true"
                        app:iss_title_background="@color/tran"
                        app:iss_delay="5000"
                        android:layout_width="match_parent"
                        android:layout_height="700dp"/>
                    <TextView
                        android:id="@+id/product_name"
                        android:textSize="16sp"
                        android:textColor="@color/txt_black"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_below="@+id/productImage"
                        android:layout_marginVertical="15dp"
                        android:textAlignment="textStart"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="@string/subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:id="@+id/productPrice_layout"
                        android:layout_below="@id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/product_before_dis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="2dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:text="199"
                            android:visibility="visible"
                            android:textColor="@color/txt_black"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/roboto_medium"/>
                        <TextView
                            android:id="@+id/dis_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="2dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="@color/txt_black"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/roboto_medium"/>
                        <TextView
                            android:id="@+id/product_price_after_dis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginStart="2dp"
                            android:layout_marginBottom="5dp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/roboto_medium"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/product_desc"
                        android:textSize="14sp"
                        android:textColor="@color/txt_gray"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_below="@+id/productPrice_layout"
                        android:layout_marginTop="10dp"
                        android:textAlignment="textStart"
                        android:text="@string/subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:paddingBottom="80dp"
                        android:id="@+id/similar_product_section"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/product_desc"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/title_new_arrival"
                            android:layout_marginVertical="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_new_arrival"
                                android:textSize="20sp"
                                android:textColor="@color/txt_black"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Similar Product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <View
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="0dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:textColor="@color/primary"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/view_all"/>
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/arrow_narrow_right_svgrepo_com"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:tint="@color/primary" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_marginTop="15dp"
                            android:id="@+id/new_arrival_rec_layout"
                            android:layout_below="@+id/title_new_arrival"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/similar_rec"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/group_btn"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingHorizontal="60dp"
        android:layout_marginBottom="20dp"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:id="@+id/buy_now_btn"
          android:background="@drawable/btn_round_v2"
          android:backgroundTint="@color/white_80"
          android:elevation="0dp"
          android:text="@string/buy_now"
          android:textSize="16sp"
          android:gravity="center"
          android:layout_marginEnd="7dp"
          android:fontFamily="@font/roboto_medium"
          android:textColor="@color/primary"
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="60dp"/>
        <TextView
            android:id="@+id/addToCart_btn"
            android:background="@drawable/btn_round_v2"
            android:backgroundTint="@color/primary"
            android:elevation="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/add_to_cart"
            android:textSize="16sp"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white_80"
            android:layout_width="0dp"
            android:layout_height="60dp"/>
    </LinearLayout>
</RelativeLayout>